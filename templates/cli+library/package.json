{
	"name": "{{github-repository}}",
	"version": "0.0.0",
	"description": "A {{type}} project.",
	"keywords": [
		"cli",
		"npm-package"
	],
	"homepage": "https://github.com/{{github-owner}}/{{github-repository}}",
	"bugs": "https://github.com/{{github-owner}}/{{github-repository}}/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/{{github-owner}}/{{github-repository}}.git"
	},
	"license": "MIT",
	"author": {
		"name": "{{author-name}}",
		"email": "{{author-email}}",
		"url": "{{author-url}}"
	},
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/lib/index.d.ts",
			"import": "./dist/lib/index.js"
		}
	},
	"main": "./dist/lib/index.js",
	"module": "./dist/lib/index.js",
	"bin": {
		"{{cli-command-name}}": "dist/bin/cli.js"
	},
	"files": [
		"dist/*"
	],
	"scripts": {
		"build": "tsdown",
		"clean": "git rm -f pnpm-lock.yaml ; git clean -fdX",
		"fix": "ksc fix",
		"lint": "ksc lint",
		"release": "bumpp --commit 'Release: %s' && pnpm run build && NPM_AUTH_TOKEN=$({{npm-auth-command}}) && pnpm publish",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"dependencies": {
		"@types/node": "^20.19.21",
		"@types/yargs": "^17.0.33",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@kitschpatrol/shared-config": "^5.7.4",
		"bumpp": "^10.3.1",
		"tsdown": "^0.15.7",
		"typescript": "~5.9.3"
	},
	"packageManager": "pnpm@10.18.3",
	"engines": {
		"node": ">=20.19.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
